<mapper namespace="com.ch.booklib.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.ch.booklib.entity.User">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="account" column="account" jdbcType="VARCHAR"/>
